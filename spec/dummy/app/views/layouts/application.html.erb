<!DOCTYPE html>
<html>
<head>
  <title>Dummy</title>

  <% if Listings.configuration.theme == 'twitter-bootstrap-2' %>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
  <% end %>

  <% if Listings.configuration.theme == 'twitter-bootstrap-3' %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <% end %>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if Listings.configuration.theme == 'twitter-bootstrap-2' %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <%= link_to 'Listings Sample', root_path, class: 'brand' %>
        <ul class="nav">
          <li><%= link_to 'twbs2', url_for(params.merge({theme: 'twitter-bootstrap-2'})) %></li>
          <li><%= link_to 'twbs3', url_for(params.merge({theme: 'twitter-bootstrap-3'})) %></li>
        </ul>
      </div>
    </div>
  <% end %>

  <% if Listings.configuration.theme == 'twitter-bootstrap-3' %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <%= link_to 'Listings Sample', root_path, class: 'navbar-brand' %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'twbs2', url_for(params.merge({theme: 'twitter-bootstrap-2'})) %></li>
          <li><%= link_to 'twbs3', url_for(params.merge({theme: 'twitter-bootstrap-3'})) %></li>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>

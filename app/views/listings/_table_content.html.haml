.listings-table-content
  - unless listing.items.empty?
    %table.table.table-hover
      %thead
        - listing.columns.each do |col|
          %th
            = col.human_name(listing)

      %tbody
        - listing.items.each do |item|
          %tr
            - listing.columns.each do |col|
              %td
                = listing.value_for(col, item)

    %ul.nav.clearfix
      - if listing.paginated?
        %li.pull-left
          = paginate listing.items, :remote => true, :theme => 'twitter-bootstrap', :params => listing.params, :remote => true
      - unless listing.export_formats.empty?
        %li.pull-right
          %ul.inline
            %li
              = listing.export_message
            - listing.export_formats.each do |format|
              %li
                = link_to format, listing.url_for_format(format)


  - else
    .well
      = listing.no_data_message

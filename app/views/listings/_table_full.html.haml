.row-fluid
  %div{:class => listing.render_filters_at?(:side) ? 'span10' : 'span12'}
    - if !listing.scopes.empty? || listing.searchable? || listing.filterable?
      .row-fluid
        .span12
          .navbar
            .navbar-inner
              %ul.nav.nav-pills
                - listing.scopes.each do |scope|
                  %li{class: "#{'active' if listing.is_active_scope(scope)}"}
                    = link_to scope.human_name, listing.url_for_scope(scope), :remote => true, class: 'scope_link'
              - if listing.searchable? || listing.filterable?
                %form.navbar-search.pull-right{:action => listings.listing_content_url(listing.name), :'data-remote' => true}
                  - listing.scoped_params.each do |key,value|
                    %input{type: 'hidden', name: key, value: value}
                  %input.search-query{type: 'text', name: listing.param_search, value: listing.scoped_params[listing.param_search], placeholder: listing.search_placeholder}
              - if listing.render_filters_at?(:top)
                %ul.nav.pull-right
                  = render 'listings/top_filters', :listing => listing
    .row-fluid
      .span12
        = render 'listings/table_content', :listing => listing
  - if listing.render_filters_at?(:side)
    .span2
      = render 'listings/side_filters', :listing => listing
